@page "/email-settings"
@using MudBlazor

<MudText Typo="Typo.h4" Class="mb-4" Align="Align.Center" Color="Color.Primary" Style="font-weight: bold;">
    Cấu hình Email sinh viên
</MudText>

<MudPaper Class="config-bar" Elevation="3" Style="padding:16px; margin-bottom:20px;">
    <MudGrid>
        <MudItem xs="12" Class="d-flex align-center justify-between">

            <!-- Input Text -->
            <MudTextField @bind-Value="newDomain" Placeholder="Nhập domain email. Ví dụ hcmus.edu.vn" Variant="MudBlazor.Variant.Outlined" Class="me-2" Style="min-width: 250px;" />

            <!-- Nút thêm -->
            <MudButton Color="Color.Success" Variant="MudBlazor.Variant.Filled" StartIcon="@Icons.Material.Filled.Add" OnClick="AddEmailSetting" Class="me-4" Style="height: 100%;">
                Thêm mới
            </MudButton>

            <!-- Toggle Switch -->
            <MudSwitch ValueChanged="OnSwitchChange" Value="@configInformations.IsActive" Color="Color.Primary" Label="Bật/Tắt quy định" T="bool" />
        </MudItem>
    </MudGrid>
</MudPaper>

<MudPaper Class="table-container" Elevation="4">
    <MudTable Items="configInformations.Value" Dense="true" Hover="true" Bordered="true" Striped="true">
        <HeaderContent>
            <MudTh Style="text-align: center; width: 20%">STT</MudTh>
            <MudTh Style="text-align: center; width: 70%">Domain Email</MudTh>
            <MudTh Style="text-align: center; width: 10%">Thao tác</MudTh>
        </HeaderContent>

        <RowTemplate Context="domain">
            <MudTd Style="text-align: center" DataLabel="STT">@(configInformations.Value.IndexOf(domain) + 1)</MudTd>
            <MudTd DataLabel="Domain Email" Style="text-align: center">@domain</MudTd>
            <MudTd Style="text-align: center" DataLabel="Thao tác">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteEmailSetting(domain))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText>Không tìm thấy dữ liệu...</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudText>Đang tải...</MudText>
        </LoadingContent>
    </MudTable>
</MudPaper>